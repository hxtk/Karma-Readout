{
  "manifest_version": 2,

  "name": "Karma Readout",
  "description": "Restore detailed karma readout",
  "version": "1.0",

  "permissions": [
    "http://*.reddit.com/r/*/comments/",
    "https://*.reddit.com/r/*/comments/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.reddit.com/r/*/comments/",
                  "https://*.reddit.com/r/*/comments/" 
        ],
      "js": ["script.js"]
    }
  ]
}
